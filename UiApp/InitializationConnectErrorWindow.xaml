<Window x:Class="UiApp.InitializationConnectErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UiApp"
        mc:Ignorable="d"
        Title="InitializationConnectErrorWindow" Height="180" Width="250" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner" Closed="Window_Closed">
    <Viewbox>
        <Grid>
            <Button x:Name="RetryButton" Content="Retry" HorizontalAlignment="Left" Margin="43,113,0,0" VerticalAlignment="Top" Click="Retry_Button_Click" Height="40" Width="70"/>
            <Button Content="Close" Margin="137,113,43,10" VerticalAlignment="Top" Height="40" Width="70" Click="Close_Button_Click"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,5,0,0" Text="Connection Error" TextWrapping="Wrap" VerticalAlignment="Top" TextDecorations="Underline" FontSize="30" TextAlignment="Center"/>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Margin="0,51,0,0">
                Click Retry to try the connection again
                <LineBreak/>
                <LineBreak/>
                Click Close to close the application
            </TextBlock>
        </Grid>
    </Viewbox>
</Window>
